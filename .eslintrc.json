{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": "standard-with-typescript",
    "parserOptions": {
        "project": "./tsconfig.json",
        "ecmaVersion": 2022
    },
    "ignorePatterns": [
        "dist",
        "src/**/*.js"
    ],
    "rules": {
        "@typescript-eslint/no-floating-promises": "off"
    }
}
